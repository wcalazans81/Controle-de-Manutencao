<div class="container mt-5" style="max-width: 500px;">
  <h3 class="mb-4 text-center">Recuperar Senha</h3>

  {{#if success_msg}}
    <div class="alert alert-success text-center">{{success_msg}}</div>
  {{/if}}

  {{#if error_msg}}
    <div class="alert alert-danger text-center">{{error_msg}}</div>
  {{/if}}

  <form action="/recuperar" method="POST">
    <div class="mb-3">
      <label for="email" class="form-label">Informe seu e-mail cadastrado</label>
      <input type="email" id="email" name="email" class="form-control" required>
    </div>

    <div class="d-grid">
      <button class="btn btn-warning" type="submit">Enviar link de redefinição</button>
    </div>
  </form>

  <div class="text-center mt-3">
    <a href="/login" class="btn btn-outline-secondary">← Voltar para login</a>
  </div>
</div>
