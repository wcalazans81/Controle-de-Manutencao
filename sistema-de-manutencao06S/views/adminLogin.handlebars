<div class="container mt-5">
  <h3 class="text-center">Login Administrativo</h3>

  {{#if error_msg}}
    <div class="alert alert-danger text-center mt-3">{{error_msg}}</div>
  {{/if}}

  <form method="POST" action="/admin/login" class="mt-4 col-md-6 offset-md-3">
    <div class="mb-3">
      <label for="adminUser" class="form-label">Usu√°rio</label>
      <input type="text" class="form-control" id="adminUser" name="adminUser" required>
    </div>

    <div class="mb-3 position-relative">
      <label for="adminSenha" class="form-label">Senha</label>
      <input type="password" class="form-control pe-5" id="adminSenha" name="adminSenha" required>

      <button type="button"
        class="btn position-absolute top-50 end-0 me-2 p-0 border-0 bg-transparent"
        style="z-index: 10; transform: translateY(-10%);"
              onclick="toggleSenhaAdm()">
        <i class="bi bi-eye" id="iconeAdminSenha"></i>
      </button>
    </div>

    <button type="submit" class="btn btn-primary w-100">Entrar</button>
  </form>
</div>

<div class="container mt-3">
  <div class="col-md-6 offset-md-3 text-center">
    <a href="/login" class="btn btn-outline-secondary mt-2">üè† Voltar</a>
  </div>
</div>

<script>
  function toggleSenhaAdm() {
    const input = document.getElementById('adminSenha');
    const icon = document.getElementById('iconeAdminSenha');
    if (input.type === 'password') {
      input.type = 'text';
      icon.classList.replace('bi-eye', 'bi-eye-slash');
    } else {
      input.type = 'password';
      icon.classList.replace('bi-eye-slash', 'bi-eye');
    }
  }
</script>
